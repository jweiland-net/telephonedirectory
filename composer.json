{
	"name": "jweiland/telephonedirectory",
	"type": "typo3-cms-extension",
	"description": "Telephone Directory",
	"license": "GPL-2.0-or-later",
	"keywords": ["typo3", "TYPO3 CMS", "telephonedirectory", "telephone", "directory"],
	"homepage": "https://jweiland.net",
	"authors": [
		{
			"name": "Stefan Froemken",
			"email": "projects@jweiland.net",
			"role": "Lead Developer"
		},
		{
			"name": "Hoja Mustaffa Abdul Latheef",
			"email": "projects@jweiland.net",
			"role": "Senior Developer"
		}
	],
	"support": {
		"email": "projects@jweiland.net",
		"issues": "https://github.com/jweiland-net/telephonedirectory/issues",
		"source": "https://github.com/jweiland-net/telephonedirectory"
	},
	"require": {
		"typo3/cms-core": "^12.4.16",
		"jweiland/maps2": ">=11.0.0",
		"jweiland/checkfaluploads": ">=4.0.0",
		"jweiland/glossary2": ">=6.0.0"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"friendsofphp/php-cs-fixer": "^3.14",
		"phpunit/phpunit": "^9.6",
		"typo3/coding-standards": "^0.6",
		"typo3/testing-framework": "^7.0.2"
	},
	"autoload": {
		"psr-4": {
			"JWeiland\\Telephonedirectory\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"JWeiland\\Telephonedirectory\\Tests\\": "Tests"
		}
	},
	"replace": {
		"typo3-ter/telephonedirectory": "self.version"
	},
	"config": {
		"sort-packages": true,
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin",
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "telephonedirectory",
			"app-dir": ".Build",
			"web-dir": ".Build/public"
		}
	},
	"scripts": {
		"php:fix": ".Build/vendor/bin/php-cs-fixer --config=Build/php-cs-fixer/config.php fix Classes Tests",
		"ci:php:lint": "find *.php Classes Configuration Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
		"ci:php:fixer": ".Build/vendor/bin/php-cs-fixer --config=Build/php-cs-fixer/config.php fix --dry-run -v --show-progress=dots --diff Classes Tests"
	}
}
